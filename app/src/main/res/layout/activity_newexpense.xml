<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newexpense"
    android:background="@color/black"
    android:padding="20dp">


    <TextView
        android:id="@+id/nas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW EXPENSE"
        android:fontFamily="@font/gilroyxb"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/bbt"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/backb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="gh"/>


    <androidx.cardview.widget.CardView
android:id="@+id/c1"
android:layout_width="match_parent"
    android:layout_marginTop="40dp"
android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:cardBackgroundColor="#3D3D3D"
    app:layout_constraintTop_toBottomOf="@id/nas">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp">

        <EditText
            android:id="@+id/expense"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/ib"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/gilroy"
            android:hint="Enter amount"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#CDCDCD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CATEGORY"
        android:textSize="40sp"
        android:fontFamily="@font/gilroyxb"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@+id/c2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c1" />
    <androidx.cardview.widget.CardView
        android:id="@+id/c2"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardBackgroundColor="#3d3d3d"
        app:layout_constraintTop_toBottomOf="@id/cat">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"

        >
        <Button
        android:id="@+id/button6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:contentDescription="FOOD"
        android:foreground="@drawable/plate"
        android:background="@drawable/ib"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOOD"
        android:layout_marginTop="10dp"
        android:textColor="#CDCDCD"
        android:textSize="15sp"
        android:fontFamily="@font/gilroy"
        app:layout_constraintEnd_toEndOf="@+id/button6"
        app:layout_constraintStart_toStartOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/button6" />


    <Button
        android:id="@+id/button7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="Transport"
        android:foreground="@drawable/img"
        android:background="@drawable/ib"
        android:backgroundTint="@color/white"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRANSPORT"
        android:layout_marginTop="10dp"
        android:textColor="#CDCDCD"
        android:fontFamily="@font/gilroy"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/button7"
        app:layout_constraintStart_toStartOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:contentDescription="Groceries"
        android:foreground="@drawable/sc"
        android:backgroundTint="@color/white"
        android:background="@drawable/ib"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GROCERIES"
        android:textColor="#CDCDCD"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/gilroy"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/button5"
        app:layout_constraintStart_toStartOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="Other"
        android:foreground="@drawable/other"
        android:background="@drawable/ib"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTHER"
        android:textColor="#CDCDCD"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/gilroy"
        app:layout_constraintEnd_toEndOf="@+id/btn4"
        app:layout_constraintStart_toStartOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />
    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:contentDescription="ENTERTAINMENT"
        android:foreground="@drawable/theater"
        android:backgroundTint="@color/white"
        android:background="@drawable/ib"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTERTAINMENT"
        android:textColor="#CDCDCD"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/gilroy"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@id/button2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="Cloth"
        android:foreground="@drawable/cloth"
        app:cornerRadius="10dp"
        android:background="@drawable/ib"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        />


        /><TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="CLOTHING"
    android:textColor="#CDCDCD"
    android:textSize="15sp"
    android:layout_marginTop="10dp"
    android:fontFamily="@font/gilroy"
    app:layout_constraintEnd_toEndOf="@+id/button2"
    app:layout_constraintStart_toStartOf="@+id/button2"
    app:layout_constraintTop_toBottomOf="@+id/button2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
